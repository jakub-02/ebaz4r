<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_navigation_drawer"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CategoriesActivity"
        android:background="@color/colorSecondary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSecondary">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white"
        />

        <LinearLayout
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:id="@+id/prvaRada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/oblecenie"
                        android:layout_width="75dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/dress" />

                    <TextView
                        android:textAlignment="center"
                        android:text="Oblečenie"
                        android:layout_below="@+id/oblecenie"
                        android:layout_height="30dp"
                        android:layout_width="100dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/zvierata"
                        android:layout_width="75dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/cat" />

                    <TextView
                        android:textAlignment="center"
                        android:text="Zvieratá"
                        android:layout_below="@+id/zvierata"
                        android:layout_height="30dp"
                        android:layout_width="100dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/elektronika"
                        android:layout_width="75dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/videogames" />

                    <TextView
                        android:textAlignment="center"
                        android:text="Elektronika"
                        android:layout_below="@+id/elektronika"
                        android:layout_height="30dp"
                        android:layout_width="100dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prvaRada"
            android:id="@+id/druhaRada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/auta"
                        android:layout_width="75dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/car" />

                    <TextView
                        android:textAlignment="center"
                        android:text="Autá"
                        android:layout_below="@+id/auta"
                        android:layout_height="30dp"
                        android:layout_width="100dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/knihy"
                        android:layout_width="75dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/book" />

                    <TextView
                        android:textAlignment="center"
                        android:text="Knihy"
                        android:layout_below="@+id/knihy"
                        android:layout_height="30dp"
                        android:layout_width="100dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/hudba"
                        android:layout_width="75dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/guitar" />

                    <TextView
                        android:textAlignment="center"
                        android:text="Hudba"
                        android:layout_below="@+id/hudba"
                        android:layout_height="30dp"
                        android:layout_width="100dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/druhaRada"
            android:id="@+id/tretiaRada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/nabytok"
                        android:layout_width="75dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/sofa" />

                    <TextView
                        android:textAlignment="center"
                        android:text="Nábytok"
                        android:layout_below="@+id/nabytok"
                        android:layout_height="30dp"
                        android:layout_width="100dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/sport"
                        android:layout_width="75dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/sport" />

                    <TextView
                        android:textAlignment="center"
                        android:text="Šport"
                        android:layout_below="@+id/sport"
                        android:layout_height="30dp"
                        android:layout_width="100dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ostatne"
                        android:layout_width="75dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/suggestion" />

                    <TextView
                        android:textAlignment="center"
                        android:text="Ostatné"
                        android:layout_below="@+id/ostatne"
                        android:layout_height="30dp"
                        android:layout_width="100dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>