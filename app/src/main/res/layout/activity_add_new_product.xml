<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".AddNewProductActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/obrazok"
            android:src="@drawable/ic_pridaj"
            android:layout_height="200dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >
        </ImageView>

        <EditText
            android:id="@+id/nazov"
            android:layout_width="match_parent"
            android:layout_below="@+id/obrazok"
            android:layout_height="60dp"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:background="@drawable/input"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:inputType="text"
            android:hint="Názov produktu"
            />

        <Spinner

            android:id="@+id/vyberKategorie"
            android:layout_height="60dp"
            android:layout_below="@+id/nazov"
            android:padding="20dp"
            android:background="@drawable/input"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="17sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:dropDownWidth="match_parent"
            android:layout_width="match_parent"
            android:gravity="center_horizontal">

        </Spinner>

        <EditText
            android:id="@+id/popis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/vyberKategorie"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:background="@drawable/input"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:inputType="text"
            android:hint="Popis"
            />

        <EditText
            android:id="@+id/cena"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/popis"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:background="@drawable/input"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:inputType="number"
            android:hint="Cena"
            />

        <Button
            android:id="@+id/vytvorit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cena"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/buttons"
            android:padding="20dp"
            android:text="Pridať produkt"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            />
    </RelativeLayout>
</ScrollView>